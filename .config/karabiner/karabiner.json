{
  "global": {
    "check_for_updates_on_startup": true,
    "show_in_menu_bar": true,
    "show_profile_name_in_menu_bar": false
  },
  "profiles": [
    {
      "complex_modifications": {
        "parameters": {
          "basic.simultaneous_threshold_milliseconds": 50,
          "basic.to_delayed_action_delay_milliseconds": 500,
          "basic.to_if_alone_timeout_milliseconds": 1000,
          "basic.to_if_held_down_threshold_milliseconds": 500,
          "mouse_motion_to_scroll.speed": 100
        },
        "rules": [
          {
            "description": "Mouse keys (simple) (rev 1)",
            "manipulators": [
              {
                "from": {
                  "key_code": "w",
                  "modifiers": {
                    "mandatory": [
                      "right_command"
                    ],
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "y": -1536
                    }
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "a",
                  "modifiers": {
                    "mandatory": [
                      "right_command"
                    ],
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "x": -1536
                    }
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "s",
                  "modifiers": {
                    "mandatory": [
                      "right_command"
                    ],
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "y": 1536
                    }
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "d",
                  "modifiers": {
                    "mandatory": [
                      "right_command"
                    ],
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "mouse_key": {
                      "x": 1536
                    }
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "f",
                  "modifiers": {
                    "mandatory": [
                      "right_command"
                    ],
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "pointing_button": "button1"
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "g",
                  "modifiers": {
                    "mandatory": [
                      "right_command"
                    ],
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "pointing_button": "button2"
                  }
                ],
                "type": "basic"
              }
            ]
          },
          {
            "description": "ctrl + s を option + ← に変換",
            "manipulators": [
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "com.microsoft.VSCode",
                      "com.apple.Terminal",
                      "com.googlecode.iterm2"
                    ],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "s",
                  "modifiers": {
                    "mandatory": [
                      "control"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow",
                    "modifiers": [
                      "option"
                    ]
                  }
                ],
                "type": "basic"
              }
            ]
          },
          {
            "description": "ctrl + w を option + Delete に変換",
            "manipulators": [
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "com.microsoft.VSCode",
                      "com.apple.Terminal",
                      "com.googlecode.iterm2"
                    ],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "w",
                  "modifiers": {
                    "mandatory": [
                      "control"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace",
                    "modifiers": [
                      "option"
                    ]
                  }
                ],
                "type": "basic"
              }
            ]
          },
          {
            "description": "ctrl + u を cmd + Delete に変換",
            "manipulators": [
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "com.microsoft.VSCode",
                      "com.apple.Terminal",
                      "com.googlecode.iterm2"
                    ],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "u",
                  "modifiers": {
                    "mandatory": [
                      "control"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace",
                    "modifiers": [
                      "command"
                    ]
                  }
                ],
                "type": "basic"
              }
            ]
          }
        ]
      }
    }
  ]
}
